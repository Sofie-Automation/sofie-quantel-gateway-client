{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"compilerOptions": {
		"target": "ES2018",
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"{{PACKAGE-NAME}}": ["./src/index.ts"]
		},
		"types": ["node"],
		"moduleResolution": "nodenext"
	}
}
